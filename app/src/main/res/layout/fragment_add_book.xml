<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.jaschke.alexandria.AddBook">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/eancontainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_xlarge"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/input_hint"
                android:inputType="number"
                android:maxLength="@integer/ean_size"
                android:minEms="@integer/ean_width"
                android:saveEnabled="true"
                android:singleLine="true"
                android:paddingRight="@dimen/padding_xlarge"/>

            <Button
                android:id="@+id/scan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan_button"/>
        </LinearLayout>

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eancontainer"
            android:layout_alignStart="@+id/eancontainer"
            android:layout_below="@+id/eancontainer"
            android:layout_marginTop="@dimen/padding_xlarge"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_headline"
            android:textStyle="bold"
            android:paddingRight="@dimen/padding_xlarge"/>

        <TextView
            android:id="@+id/bookSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitle"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_alignLeft="@+id/eancontainer"/>

        <TextView
            android:id="@+id/authors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/eancontainer"
            android:layout_alignRight="@+id/eancontainer"
            android:layout_below="@+id/bookSubTitle"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:textSize="@dimen/text_small"/>

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eancontainer"
            android:layout_alignStart="@+id/eancontainer"
            android:layout_alignTop="@+id/authors"
            android:contentDescription="@string/book_cover"/>

        <TextView
            android:id="@+id/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eancontainer"
            android:layout_alignStart="@+id/eancontainer"
            android:layout_below="@+id/bookCover"
            android:layout_marginTop="@dimen/padding_xlarge"
            android:textSize="@dimen/text_small"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/action_buttons_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/cancel_button"
                android:visibility="invisible"
                android:drawableLeft="@drawable/ic_action_discard"/>

            <Button
                android:id="@+id/save_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/ok_button"
                android:visibility="invisible"
                android:drawableLeft="@drawable/ic_action_accept"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
